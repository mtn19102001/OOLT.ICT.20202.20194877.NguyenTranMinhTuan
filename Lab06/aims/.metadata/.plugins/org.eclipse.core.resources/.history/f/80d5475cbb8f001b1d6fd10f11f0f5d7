package hust.soict.globalict.garbage;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

public class ConcatenationInLoops {
	public static void main(String []args) throws IOException {
		String filename = "C:\\wsl\\review\\0203\\backTracking\\binGen"; //  is the name or the path to an executable file
		byte[] inputBytes = { 0 };
		long startTimeBuf, endTimeBuf,startTimeStr, endTimeStr, startTimeBui, endTimeBui;
		inputBytes = Files.readAllBytes(Paths.get(filename));
		startTimeBuf = System.currentTimeMillis();
		StringBuffer outputStringBuffer = new StringBuffer();
		for(byte b : inputBytes) {
			outputStringBuffer.append((char)b);
		}
		endTimeBuf = System.currentTimeMillis();
		System.out.println("String Buffer takes: " + (endTimeBuf - startTimeBuf));
		inputBytes = Files.readAllBytes(Paths.get(filename));
		startTimeStr = System.currentTimeMillis();
		String outputString = "";
		for(byte b : inputBytes) {
			outputString += (char)b;
		}
		endTime = System.currentTimeMillis();
		System.out.println(endTime - startTime);
	}
}
